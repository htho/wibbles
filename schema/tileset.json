{
  "$ref": "#/definitions/Tileset",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Meta": {
      "additionalProperties": false,
      "properties": {
        "author": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "version": {
          "type": "number"
        }
      },
      "required": [
        "name",
        "author",
        "version"
      ],
      "type": "object"
    },
    "Tile": {
      "anyOf": [
        {
          "additionalProperties": false,
          "properties": {
            "sprite": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "items": {
                    "type": "string"
                  },
                  "type": "array"
                }
              ],
              "description": "name of a sprite `${spriteset}/${spritefile}/${spritename}.${keyof MultiSprite}`"
            },
            "type": {
              "$ref": "#/definitions/TileType"
            }
          },
          "required": [
            "type",
            "sprite"
          ],
          "type": "object"
        },
        {
          "additionalProperties": false,
          "properties": {
            "closed": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "items": {
                    "type": "string"
                  },
                  "type": "array"
                }
              ],
              "description": "name of a sprite `${spriteset}/${spritefile}/${spritename}.${keyof MultiSprite}`"
            },
            "open": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "items": {
                    "type": "string"
                  },
                  "type": "array"
                }
              ],
              "description": "name of a sprite `${spriteset}/${spritefile}/${spritename}.${keyof MultiSprite}`"
            },
            "type": {
              "enum": [
                "exit",
                "start"
              ],
              "type": "string"
            }
          },
          "required": [
            "type",
            "open",
            "closed"
          ],
          "type": "object"
        }
      ]
    },
    "TileType": {
      "enum": [
        "wall",
        "floor",
        "start",
        "exit"
      ],
      "type": "string"
    },
    "Tileset": {
      "additionalProperties": false,
      "properties": {
        "$schema": {
          "type": "string"
        },
        "meta": {
          "$ref": "#/definitions/Meta"
        },
        "tiles": {
          "additionalProperties": {
            "$ref": "#/definitions/Tile"
          },
          "type": "object"
        }
      },
      "required": [
        "$schema",
        "meta",
        "tiles"
      ],
      "type": "object"
    }
  }
}