{
  "$ref": "#/definitions/JsonTileset",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "BasicJsonTile": {
      "additionalProperties": false,
      "properties": {
        "sprite": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "items": {
                "type": "string"
              },
              "type": "array"
            }
          ],
          "description": "name of a sprite `${spritecollection}/${spritefile}/${spritename}.${keyof MultiSprite}`"
        },
        "type": {
          "$ref": "#/definitions/TileType"
        }
      },
      "required": [
        "type",
        "sprite"
      ],
      "type": "object"
    },
    "JsonMeta": {
      "additionalProperties": false,
      "properties": {
        "author": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "version": {
          "type": "number"
        }
      },
      "required": [
        "name",
        "author",
        "version"
      ],
      "type": "object"
    },
    "JsonTile": {
      "anyOf": [
        {
          "$ref": "#/definitions/BasicJsonTile"
        },
        {
          "$ref": "#/definitions/OpenableJsonTile"
        }
      ]
    },
    "JsonTileset": {
      "additionalProperties": false,
      "properties": {
        "$schema": {
          "type": "string"
        },
        "meta": {
          "$ref": "#/definitions/JsonMeta"
        },
        "tiles": {
          "additionalProperties": {
            "$ref": "#/definitions/JsonTile"
          },
          "type": "object"
        }
      },
      "required": [
        "$schema",
        "meta",
        "tiles"
      ],
      "type": "object"
    },
    "OpenableJsonTile": {
      "additionalProperties": false,
      "properties": {
        "closed": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "items": {
                "type": "string"
              },
              "type": "array"
            }
          ],
          "description": "name of a sprite `${spritecollection}/${spritefile}/${spritename}.${keyof MultiSprite}`"
        },
        "open": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "items": {
                "type": "string"
              },
              "type": "array"
            }
          ],
          "description": "name of a sprite `${spritecollection}/${spritefile}/${spritename}.${keyof MultiSprite}`"
        },
        "type": {
          "enum": [
            "exit",
            "start"
          ],
          "type": "string"
        }
      },
      "required": [
        "type",
        "open",
        "closed"
      ],
      "type": "object"
    },
    "TileType": {
      "enum": [
        "wall",
        "floor",
        "start",
        "exit"
      ],
      "type": "string"
    }
  }
}